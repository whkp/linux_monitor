# 环境配置 - 简化版AI智能告警系统
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# 监控系统配置
MONITOR_GRPC_HOST=localhost
MONITOR_GRPC_PORT=50051

# 向量数据库配置
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
CHROMA_COLLECTION_NAME=linux_monitoring_kb

# 告警配置
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USER=your-email@gmail.com
ALERT_EMAIL_PASSWORD=your-app-password

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=simple

# 告警阈值配置
CPU_THRESHOLD_WARNING=80.0
CPU_THRESHOLD_CRITICAL=95.0
MEMORY_THRESHOLD_WARNING=85.0
MEMORY_THRESHOLD_CRITICAL=95.0
LOAD_THRESHOLD_WARNING=4.0
LOAD_THRESHOLD_CRITICAL=8.0
